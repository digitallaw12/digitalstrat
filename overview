                    aufsicht: 'Die Aufsicht erfolgt primär durch die für Unternehmensregister zuständigen nationalen Behörden.',
                    durchfuehrungsgesetze: 'Die Umsetzung in deutsches Recht muss bis zum 31. Juli 2027 erfolgen. Ein entsprechender Gesetzentwurf ist noch nicht veröffentlicht.'
                }
            }
        ];

        // DOM-Elemente
        const lawsContainer = document.getElementById('laws-container');
        const searchInput = document.getElementById('search-input');
        const statusFilter = document.getElementById('status-filter');
        const relevanceFilter = document.getElementById('relevance-filter');
        const detailsContainer = document.getElementById('details-container');
        const detailsPanel = document.getElementById('details-panel');
        const closeDetailsButton = document.getElementById('close-details');
        
        // Funktion zum Rendern aller Gesetzeskarten
        function renderLawCards(laws) {
            lawsContainer.innerHTML = '';
            
            if (laws.length === 0) {
                lawsContainer.innerHTML = '<p class="no-results">Keine Ergebnisse gefunden.</p>';
                return;
            }
            
            laws.forEach(law => {
                const card = document.createElement('div');
                card.className = 'card';
                card.dataset.id = law.id;
                card.style.borderTopColor = law.topColor;
                
                card.innerHTML = `
                    <h2>${law.title}</h2>
                    <p>${law.shortDescription}</p>
                    <p>Geltungsbeginn: ${law.geltungsbeginn}</p>
                    <div>
                        <span class="label status-${law.status}" style="background-color: ${law.topColor}">
                            ${getStatusLabel(law.status)}
                        </span>
                        ${law.relevance.map(rel => `<span class="label" style="background-color: #666;">${getRelevanceLabel(rel)}</span>`).join('')}
                    </div>
                `;
                
                card.addEventListener('click', () => showDetails(law));
                
                lawsContainer.appendChild(card);
            });
        }
        
        // Details anzeigen
        function showDetails(law) {
            detailsPanel.innerHTML = `
                <button class="close-button" id="close-details">&times;</button>
                <h2>${law.title} <span class="status-pill status-${law.status}">${getStatusLabel(law.status)}</span></h2>
                
                <div class="section">
                    <h3>Ziel</h3>
                    <p>${law.details.ziel}</p>
                </div>
                
                <div class="section">
                    <h3>Adressaten</h3>
                    <p>${law.details.adressaten}</p>
                </div>
                
                <div class="section">
                    <h3>Auswirkungen auf die Landesverwaltung</h3>
                    <p>${law.details.auswirkungVerwaltung}</p>
                </div>
                
                <div class="section">
                    <h3>Aufsicht</h3>
                    <p>${law.details.aufsicht}</p>
                </div>
                
                <div class="section">
                    <h3>Durchführungsgesetze</h3>
                    <p>${law.details.durchfuehrungsgesetze}</p>
                </div>
                
                <div class="section">
                    <h3>Geltungsbeginn</h3>
                    <p>${law.geltungsbeginn}</p>
                </div>
            `;
            
            detailsContainer.style.display = 'flex';
            
            document.getElementById('close-details').addEventListener('click', () => {
                detailsContainer.style.display = 'none';
            });
        }
        
        // Status- und Relevanz-Labels
        function getStatusLabel(status) {
            const labels = {
                'inKraft': 'In Kraft',
                'inUmsetzung': 'In Umsetzung',
                'inVerhandlung': 'In Verhandlung',
                'geplant': 'Geplant'
            };
            return labels[status] || status;
        }
        
        function getRelevanceLabel(relevance) {
            const labels = {
                'datenschutz': 'Datenschutz',
                'plattformen': 'Plattformen',
                'cybersicherheit': 'Cybersicherheit',
                'finanzsektor': 'Finanzsektor',
                'ki': 'KI',
                'gesundheit': 'Gesundheit',
                'medien': 'Medien',
                'verwaltung': 'Verwaltung',
                'infrastruktur': 'Infrastruktur',
                'produktsicherheit': 'Produktsicherheit',
                'grundrechte': 'Grundrechte',
                'kommunikation': 'Kommunikation',
                'wettbewerb': 'Wettbewerb',
                'industrie': 'Industrie',
                'arbeit': 'Arbeit',
                'wirtschaft': 'Wirtschaft'
            };
            return labels[relevance] || relevance;
        }
        
        // Filter und Suche anwenden
        function applyFilters() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value;
            const relevanceValue = relevanceFilter.value;
            
            const filteredLaws = digitalLaws.filter(law => {
                // Suche
                const matchesSearch = 
                    law.title.toLowerCase().includes(searchTerm) || 
                    law.shortDescription.toLowerCase().includes(searchTerm) ||
                    law.details.ziel.toLowerCase().includes(searchTerm);
                
                // Status-Filter
                const matchesStatus = statusValue === 'all' || law.status === statusValue;
                
                // Relevanz-Filter
                const matchesRelevance = relevanceValue === 'all' || law.relevance.includes(relevanceValue);
                
                return matchesSearch && matchesStatus && matchesRelevance;
            });
            
            renderLawCards(filteredLaws);
        }
        
        // Event-Listener
        searchInput.addEventListener('input', applyFilters);
        statusFilter.addEventListener('change', applyFilters);
        relevanceFilter.addEventListener('change', applyFilters);
        
        closeDetailsButton.addEventListener('click', () => {
            detailsContainer.style.display = 'none';
        });
        
        // Initialisierung
        renderLawCards(digitalLaws);
        
        // Klick außerhalb des Detail-Panels schließt es
        detailsContainer.addEventListener('click', (e) => {
            if (e.target === detailsContainer) {
                detailsContainer.style.display = 'none';
            }
        });
    </script>
</body>
</html>
